<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="android.view.View" />

        <variable
            name="model"
            type="com.recyclerviewDemo.model.Listing.StringData.StringTwo" />

        <variable
            name="click"
            type="View.OnClickListener" />

        <variable
            name="itemclick"
            type="com.recyclerviewDemo.RvClickListener" />

    </data>

    <com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rv_nested_news_main_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:clickable="true"
        android:focusable="true"
        android:onClick="@{click::onClick}"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--<com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_nested_news_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                urlToImage="@{model.urlToImage}"
                android:padding="5dp"
                android:scaleType="fitXY"
                app:shapeAppearanceOverlay="@style/CircleImage" />-->

            <TextView
                android:id="@+id/tv_nested_news_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="@{click::onClick}"
                android:padding="5dp"
                android:text="@{model.description}"
                android:textAppearance="?attr/textAppearanceHeadline6" />

            <!-- <TextView
                 android:id="@+id/tv_nested_news_description"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="@{model.description}"
                 android:padding="5dp"
                 android:textAppearance="?attr/textAppearanceBody2"
                 android:textColor="?android:attr/textColorSecondary" />-->
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>